model CampaignPlan {
    id        Int      @id @default(autoincrement())
    createdAt DateTime @default(now()) @map("created_at")
    updatedAt DateTime @updatedAt @map("updated_at")

    campaignInfoHash String @map("campaign_info_hash")

    overview                         String?
    strategicLandscapeElectoralGoals String? @map("strategic_landscape_electoral_goals")
    campaignTimeline                 String? @map("campaign_timeline")
    recommendedTotalBudget           String? @map("recommended_total_budget")
    knowYourCommunity                String? @map("know_your_community")
    voterContactPlan                 String? @map("voter_contact_plan")

    rawJson Json? @map("raw_json")

    campaign   Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)
    campaignId Int      @unique @map("campaign_id")

    @@map("campaign_plan")
}
