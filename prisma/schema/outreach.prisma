enum OutreachType {
  p2pTexting
  doorKnocking
  phoneBanking
}

enum OutreachStatus {
  pending
  approved
  denied
  paid
  in_progress
  completed
}

model Outreach {
  id                       Int             @id @default(autoincrement())
  createdAt                DateTime        @default(now())
  updatedAt                DateTime        @updatedAt
  campaign                 Campaign        @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  campaignId               Int
  outreachType             OutreachType?   @default(p2pTexting)
  projectId                String?         @map("project_id")
  name                     String?
  status                   OutreachStatus? @default(pending)
  error                    String?
  audienceRequest          String?         @map("audience_request")
  script                   String?         @db.Text
  message                  String?
  date                     DateTime?
  imageUrl                 String?         @map("image_url")
  voterFileFilter          VoterFileFilter? @relation(fields: [voterFileFilterId], references: [id])
  voterFileFilterId        Int?            @unique @map("voter_file_filter_id")

  @@index([campaignId])
  @@map("outreach")
}
