{
  "name": "@goodparty_org/contracts",
  "version": "0.0.1",
  "description": "Shared Zod schemas and TypeScript types for the GoodParty API",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "generate-enums": "tsx scripts/generate-enums.ts",
    "dev": "npm run generate-enums && tsup --watch",
    "build": "npm run generate-enums && tsup",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/thegoodparty/gp-api"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "dependencies": {
    "validator": "^13.15.26",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@types/validator": "^13.15.10",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.6.3"
  }
}
